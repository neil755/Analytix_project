<odoo>
    <record id="module_category_pro_master_management" model="ir.module.category">
        <field name="name">PRO Master File</field>
        <field name="description">Manage PRO Master File</field>
        <field name="sequence">1</field>
    </record>

    <!-- Define User Group -->
    <record id="group_pro_master_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_pro_master_management"/>
    </record>

    <!-- Define Manager Group -->
    <record id="group_pro_master_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="implied_ids" eval="[(4, ref('group_pro_master_user'))]"/>
        <field name="category_id" ref="module_category_pro_master_management"/>
    </record>


    <record id="access_pro_master_user" model="ir.model.access">
        <field name="name">User Access</field>
        <field name="model_id" ref="model_pro_master"/>
        <field name="group_id" ref="group_pro_master_user"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="access_pro_master_manager" model="ir.model.access">
        <field name="name"> Manager Access</field>
        <field name="model_id" ref="model_pro_master"/>
        <field name="group_id" ref="group_pro_master_manager"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>


</odoo>
